<?xml version="1.0" encoding="utf-8" ?>
<view>
    <header>
        <title>a viewer in MVC</title>
    </header>
    <body>
        <form>
        <!--<form name="logoutForm"  action="logout.action" method="post" >-->
            <name>logoutForm</name>
            <action>logout.action</action>
            <method>post</method>
        <!--Login Name: <input type="text" name="userName" value="Water" /><br />-->
            <textView>
                <name>userName</name>
                <label>Login Name:</label>
                <value>Water</value>
            </textView>
            <textView>
                <name>userAge</name>
                <label>Age:</label>
                <value>30</value>
            </textView>
        <!--Logout: <input type="button" name="logoutButton" /><br />-->
            <buttonView>
                <name>logoutButton</name>
                <label>Logout</label>
            </buttonView>
        </form>
    </body>
</view>